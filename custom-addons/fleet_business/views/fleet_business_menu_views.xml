<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="fleet_business_trip_action" model="ir.actions.act_window">
    <field name="name">Company's Fleet</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">fleet.business.trip</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a business trip and wait for approval, 
        Contact administrator if you aren't a company's employee
      </p>
    </field>
  </record>

  <record id="fleet_business_rent_action" model="ir.actions.act_window">
    <field name="name">Company's Supported</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">fleet.business.rent</field>
    <field name="view_mode">tree,form</field>
    <field name="context">{}</field>
    <field name="help" type="html">
      <p class="o_view_nocontent_smiling_face">
        Create a Company's Supported business trips and wait for approval, 
        Contact administrator if you aren't a company's employee
      </p>
    </field>
  </record>

  <menuitem
    id="fleet_business_menu_root"
    name="Business Trips"
    groups="fleet.fleet_group_user"
    parent="fleet.menu_root"
    sequence="90">
    
    <menuitem
      id="fleet_business_trip_menu"
      name="Company's Fleet"
      groups="fleet.fleet_group_user"
      action="fleet_business_trip_action"
      sequence="0"/>

    <menuitem
      id="fleet_business_rent_menu"
      name="Company's Supported"
      groups="fleet.fleet_group_user"
      action="fleet_business_rent_action"
      sequence="10"/>
  </menuitem>

  <record id="fleet_business_tag_action" model="ir.actions.act_window">
    <field name="name">Business Trip Tags</field>
    <field name="res_model">fleet.business.tag</field>
    <field name="view_mode">tree</field>
    <field name="help" type="html">
        <p class="o_view_nocontent_smiling_face">
            Add a new tag
        </p>
    </field>
  </record>

  <menuitem
    id="fleet_business_tag"
    name="Business Trip Tags"
    action="fleet_business_tag_action"
    groups="fleet.fleet_group_manager"
    parent="fleet.fleet_configuration"
    sequence="10"/>

  <!-- <menuitem name="Fleet" id="menu_root" sequence="220" groups="fleet_group_user" web_icon="fleet,static/description/icon.png"/> -->
  

</odoo>
