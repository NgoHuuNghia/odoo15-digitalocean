<odoo>
  <data>
    <record id="view_employee_form_inherit_fleet_business" model="ir.ui.view">
      <field name="name">hr.employee.view.form.inherit.fleet.business</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="priority">10</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='job_title']/parent::h2" position="after">
          <span attrs="{'invisible':[('job_title','!=','Driver')]}">
            <label for="driver_ratings" string="Driver Rating"/>
            <h2>
              <field name="driver_ratings" widget="priority" class="mr-3" />
            </h2>
          </span>
        </xpath>
        <xpath expr="//page[@name='public']" position="after" groups="hr.group_hr_user,fleet.fleet_group_user">
          <page string="Business Trip Infomations" >
              <h2>
                <label for="business_trip_ids" ></label>
              </h2>
              <field name="business_trip_ids" />
              <!--! <h2>
                <label for="business_rent_ids" ></label>
              </h2>
              <field name="business_rent_ids" /> -->
          </page>
          <page name="hr_addons_driver_ratings" string="Driver Ratings" groups="fleet.fleet_group_manager">
            <group>
              <!-- <field name="driver_ratings" widget="priority" class="mr-3" /> -->
              <field name="driver_ratings" widget="priority" class="mr-3" />
              <field name="driver_rating_line_ids">
                <tree editable="bottom">
                  <field name="rated" />
                  <field name="rater_id" />
                  <field name="fleet_business_trip_id" />
                  <field name="note" />
                </tree>

                <form>
                  <group>
                    <field name="rated" />
                    <field name="rater_id" />
                    <field name="fleet_business_trip_id" />
                    <field name="note" />
                  </group>
                </form>
              </field>
            </group>
          </page>
        </xpath>
      </field>
    </record>

    <record id="view_employee_public_form_inherit_fleet_business" model="ir.ui.view">
      <field name="name">hr.employee.public.view.form.inherit.fleet.business</field>
      <field name="model">hr.employee.public</field>
      <field name="inherit_id" ref="hr.hr_employee_public_view_form"/>
      <field name="priority">10</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='job_title']/parent::h2" position="after">
          <span attrs="{'invisible':[('job_title','!=','Driver')]}">
            <label for="driver_ratings" string="Driver Rating"/>
            <h2>
              <field name="driver_ratings" widget="priority" class="mr-3" />
            </h2>
          </span>
        </xpath>
      </field>
    </record>
  </data>
</odoo>