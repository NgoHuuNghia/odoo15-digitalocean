<?xml version="1.0" encoding="utf-8"?>
<odoo>

  <record id="action_cancel_appointment" model="ir.actions.act_window">
    <field name="name">Cancel Appointment</field>
    <field name="type">ir.actions.act_window</field>
    <field name="res_model">hospital.cancel.appointment.wizard</field>
    <field name="view_mode">form</field>
    <!--? with the name [target] we don't have to open a whole new page to enter the form view -->
    <field name="target">new</field>
  </record>

  <record id="view_cancel_appointment_form" model="ir.ui.view">
    <field name="name">hospital.cancel.appointment.wizard.form</field>
    <field name="model">hospital.cancel.appointment.wizard</field>
    <field name="arch" type="xml">
      <form string="">
        <group>
          <group>
            <!-- ? with invisible and context we can hide a field using a passed context -->
            <!-- <field name="appointment_id" readonly="1" invisible="context.get('hide_appointment_id')"/> -->
            <!--?90? the same domain filter can be achive in the view side as well as module side -->
            <field name="appointment_id" domain="[('state','=','draft'),('priority','in',('0','1',False))]"/>
            <field name="reason" />
          </group>
          <group>
            <field name="date_cancel" />
          </group>
        </group>

        <!--? add our own footer to replace functionallity -->
        <footer>
          <button name="action_cancel" string="Cancel Appointment" type="object" class="btn-primary" data-hotkey="q"/>
          <button special="cancel" data-hotkey="z" string="Discard"/>
        </footer>
      </form>
    </field>
  </record>

</odoo>
