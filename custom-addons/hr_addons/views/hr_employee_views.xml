<odoo>
  <data>
    <record id="view_employee_form_inherit_hr_addons" model="ir.ui.view">
      <field name="name">hr.employee.view.form.inherit.hr.addons</field>
      <field name="model">hr.employee</field>
      <field name="inherit_id" ref="hr.view_employee_form"/>
      <field name="priority">10</field>
      <field name="arch" type="xml">
        <xpath expr="//field[@name='department_id']" position="after">
          <field name="department_position" />
        </xpath>
        <xpath expr="//page[@name='personal_information']" position="after">
          <page name="hr_addons_ratings" string="User Ratings" groups="hr.group_hr_user">
            <group>
              <field name="ratings" />
              <field name="driver_rating_line_ids">
                <tree editable="bottom">
                  <field name="rated" />
                  <field name="rater_id" />
                  <!-- <field name="fleet_business_trip_id" /> -->
                  <field name="note" />
                </tree>

                <!-- <form>
                  <group>
                    <field name="rated" />
                    <field name="rater_id" />
                    <field name="fleet_business_trip_id" />
                    <field name="note" />
                  </group>
                </form> -->
              </field>
            </group>
          </page>
        </xpath>
      </field>
    </record>
  </data>
</odoo>